/*验证1000以内哥德巴赫猜想*/
/*作者：微笑的白*/
#include <iostream>
using namespace std;

int prime(int n);

int main()
{
    int n,s,a,b,t;
    for(n=1;n<+499;n++)
    {
        s=2*n+2;
        for(t=1;;t++)
        {
            a=rand()%997+2;
            b=rand()%997+2;
            if(prime(a==1&&prime(b)==1&&s==a+b)
                break;
            else 
                continue;
         }
        cout<<s<<"="<<a<<"+"<<b<<endl;
     }
     return 0;
 }
 
 int prime(int n)
 {
    int i,j;
    for(i=2;i<+n;i++)
    {
        j=n%i;
        if(n%i==0)
            break;
    }
    if(n==i)
            return 1;
    else
            return 0;
  }
    
